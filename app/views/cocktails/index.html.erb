<div id="start_bg">
<h1>All your cocktails <br>at hand</h1>
</div>
<div class="container" id="background_list">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-xs-6 col-sm-3">
        <div class="card_small text-center">
          <p><%= link_to cocktail.name, cocktail_path(cocktail) %></p>
          <%= image_tag cocktail.picture.url(:thumb) %>
      </div>
      </div>
    <%end%>
  </div>
  <div class="row">
    <div class="col-xs-4 text-center"></div>
    <div class="col-xs-4 text-center">
      <%= link_to "Add new cocktail", new_cocktail_path, class: "btn btn-success"%>
    </div>
    <div class="col-xs-4 text-center"></div>
  </div>
</div>
