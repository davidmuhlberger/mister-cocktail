<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-2">
    </div>
    <div class="col-xs-12 col-sm-8 card text-center">
      <div class="row">
        <div class="col-xs-12 text-center">
          <h1><%=@cocktail.name %></h1>
            <%= image_tag @cocktail.picture.url(:medium) %>
            <p><%= link_to "edit", edit_cocktail_path(@cocktail) %></p>
          <% @cocktail.doses.each do |dose| %>
          <h4>
            <%=dose.description + " " + dose.ingredient.name%>
            <%= link_to "[X]", dose_path(dose),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
          </h4>
          <%end%>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-12 card_add_ingredient text-center">

          <h4>Add new ingredient</h4>

          <%= simple_form_for ([@cocktail, @dose]) do |f| %>
            <%= f.error_notification %>

            <%= f.input :description, label: "Quantity" %>
            <%= f.input :ingredient_id, as: :select, collection: Ingredient.all %>

            <%= f.button :submit, class: "btn btn-info"%>
          <% end %>
        </div>
      </div>
    </div>
    <div class="col-xs-12 col-sm-2">
    </div>
  </div>
</div>
